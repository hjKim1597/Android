    <!--
        양방향 연결
        서로 양뱡향 연결이 들어가 있을 때 chainStyle 지정 가능함
        spread - 균등 분할
        spread inside - 양쪽 붙이고 균등 분할
        packed 서로 모음
    -->

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:text="체인1"
        app:layout_constraintHorizontal_chainStyle="packed"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/btn2"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체인2"

        app:layout_constraintLeft_toRightOf="@+id/btn1"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        />


    <!--치우치게 만들기-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정중앙"

        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.3"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <Button
        android:id="@+id/ex_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼3"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        />

    <!--bias 속성은 위젯이 서로 양방향 연결되면 동작하지 않습니다-->

    <Button
        android:id="@+id/ex_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼3"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ex_btn1"
        app:layout_constraintRight_toLeftOf="@+id/ex_btn3"

        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.6"

        />

    <Button
        android:id="@+id/ex_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼3"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>